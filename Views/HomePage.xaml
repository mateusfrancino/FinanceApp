<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:MeuClienteApp.Helpers"
             x:Class="MeuClienteApp.Views.HomePage"
             BackgroundColor="#E6E7E8">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Border Background="#F5F5F5" Stroke="White" StrokeThickness="1" Margin="70,25,70,25" Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <!-- Grade principal -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70*"/>
                            <RowDefinition Height="30*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="35*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2"
                                Background="Transparent" Stroke="Transparent" Padding="0" Margin="10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="15*"/>
                                    <RowDefinition Height="70*"/>
                                    <RowDefinition Height="15*"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Border Grid.Row="0" Background="Transparent" Stroke="Transparent" Padding="0" Margin="10,10,10,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" Source="btg_logo_completo.png"
                                               HeightRequest="52" WidthRequest="142"
                                               Margin="0,1,0,0" Aspect="AspectFit"
                                               HorizontalOptions="Start" VerticalOptions="Start"/>

                                        <Border Grid.Column="2" Background="#1857ae" Stroke="White"
                                                Padding="0" Margin="0" HorizontalOptions="End" VerticalOptions="End"
                                                WidthRequest="311" HeightRequest="29">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="5"/>
                                            </Border.StrokeShape>
                                            <Label Text="Clientes Cadastrados" FontSize="16"
                                                   TextColor="White" FontFamily="OpenSansRegular"
                                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- LISTA -->
                                <Border Grid.Row="1" Background="Transparent" Stroke="Transparent" Padding="0" Margin="10,0,11,1"
                                        VerticalOptions="Fill" HorizontalOptions="Fill">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Cabeçalho fixo -->
                                        <Grid Grid.Row="0" BackgroundColor="#f9f9fb" HeightRequest="40" Padding="10,0" Margin="0,0,0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Text="Nome" VerticalTextAlignment="Center" FontFamily="OpenSansSemibold"/>
                                            <Label Grid.Column="1" Text="Sobrenome" VerticalTextAlignment="Center" FontFamily="OpenSansSemibold"/>
                                            <Label Grid.Column="2" Text="Idade" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontFamily="OpenSansSemibold"/>
                                            <Label Grid.Column="3" Text="Endereço" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontFamily="OpenSansSemibold"/>
                                        </Grid>

                                        <!-- Conteúdo -->
                                        <Border Grid.Row="1" Background="White" Stroke="#C7CBD0" Padding="0" Margin="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6"/>
                                            </Border.StrokeShape>

                                            <CollectionView ItemsSource="{Binding Customers}"
                                                            SelectionMode="Single"
                                                            SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Padding="10" ColumnSpacing="8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1*"/>
                                                                <ColumnDefinition Width="1*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="2*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Label Text="{Binding Name}" VerticalTextAlignment="Center" TextColor="#001861"/>
                                                            <Label Grid.Column="1" Text="{Binding Lastname}" VerticalTextAlignment="Center" TextColor="#001861"/>
                                                            <Label Grid.Column="2" Text="{Binding Age}" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" TextColor="#001861"/>
                                                            <Label Grid.Column="3" Text="{Binding Address}" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="#001861"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Rodapé decorativo -->
                                <Border Grid.Row="2" Background="Transparent" Stroke="Transparent" Padding="0" Margin="10,1,10,10">
                                    <Image Source="rodape_paginas_invertido.png"
                                           Aspect="Fill" Margin="0,26,2,0"
                                           HeightRequest="2" VerticalOptions="Start"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- (dados do cliente) -->
                        <Border Grid.Row="0" Grid.Column="2"
                                Background="Transparent" Stroke="Transparent" Padding="0" Margin="10,50,10,10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>

                            <Grid VerticalOptions="Start" Margin="10,50,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.ColumnSpan="2"
                                       Text="~      Dados Cliente      ~"
                                       FontSize="14" FontFamily="OpenSansRegular"
                                       TextColor="#666D82"
                                       HorizontalOptions="Center" />

                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="Nome" FontSize="12" TextColor="#6E77A0"
                                       FontFamily="OpenSansSemibold" Margin="0,8,12,0"/>
                                <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding SelectedCustomer.Name}"
                                       FontSize="14" FontFamily="OpenSansRegular" TextColor="#001861"/>

                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="Sobrenome" FontSize="12" TextColor="#6E77A0"
                                       FontFamily="OpenSansSemibold" Margin="0,8,12,0"/>
                                <Label Grid.Row="2" Grid.Column="1"
                                       Text="{Binding SelectedCustomer.Lastname}"
                                       FontSize="14" FontFamily="OpenSansRegular" TextColor="#001861"/>

                                <Label Grid.Row="3" Grid.Column="0"
                                       Text="Idade" FontSize="12" TextColor="#6E77A0"
                                       FontFamily="OpenSansSemibold" Margin="0,8,12,0"/>
                                <Label Grid.Row="3" Grid.Column="1"
                                       Text="{Binding SelectedCustomer.Age}"
                                       FontSize="14" FontFamily="OpenSansRegular" TextColor="#001861"/>

                                <Label Grid.Row="4" Grid.Column="0"
                                       Text="Endereço" FontSize="12" TextColor="#6E77A0"
                                       FontFamily="OpenSansSemibold" Margin="0,8,12,0"/>
                                
                                <Label Grid.Row="4" Grid.Column="1"
                                       Text="{Binding SelectedCustomer.Address}"
                                       FontSize="14" FontFamily="OpenSansRegular" TextColor="#001861"
                                       LineBreakMode="WordWrap"/>

                                <Image Grid.Row="5" Grid.ColumnSpan="2"
                                       Source="shapeinferiorroxo.png" Aspect="Fill"
                                       Margin="0,70,0,0" HeightRequest="2" VerticalOptions="End"/>
                            </Grid>
                        </Border>

                        <!-- btns AÇÕES RÁPIDAS -->
                        <Border Grid.Row="0" Grid.Column="2"
                                Background="Transparent" Stroke="Transparent" Padding="0" Margin="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>

                            <Grid VerticalOptions="End">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="~      Ações Rápidas      ~"
                                       FontSize="14" FontFamily="OpenSansRegular" TextColor="#666D82" 
                                       Margin="0,0,0,20" HorizontalOptions="Center" VerticalOptions="Center"/>

                                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                        Text="Incluir" FontSize="14" TextColor="White" BackgroundColor="#1857ae"
                                        FontFamily="OpenSansSemibold" CornerRadius="10" Margin="0" Padding="0"
                                        HeightRequest="40" WidthRequest="339" VerticalOptions="Center" HorizontalOptions="Center"
                                        Command="{Binding NewCommand}"/>

                                <Button Grid.Row="2" Grid.Column="0"
                                        Text="Alterar" FontSize="14" TextColor="White" BackgroundColor="#1857ae"
                                        FontFamily="OpenSansSemibold" CornerRadius="10" Margin="10" Padding="0" 
                                        HeightRequest="40" WidthRequest="159" VerticalOptions="Center" HorizontalOptions="End"
                                        Command="{Binding EditCommand}"/>

                                <Button Grid.Row="2" Grid.Column="1"
                                        Text="Excluir" FontSize="14" TextColor="White" BackgroundColor="#1857ae"
                                        FontFamily="OpenSansSemibold" CornerRadius="10" Margin="10" Padding="0"
                                        HeightRequest="40" WidthRequest="159" VerticalOptions="Center" HorizontalOptions="Start"
                                        Command="{Binding DeleteCommand}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- rodapé -->
            <BoxView Grid.Row="2" BackgroundColor="#001861" HeightRequest="30"/>
        </Grid>
    </Grid>
</ContentPage>
